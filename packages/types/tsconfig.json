{
  "compilerOptions": {
    // Module settings - Align with package.json "type": "module"
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    // Output settings
    "outDir": "./dist",         // Output directory for compiled files
    "declaration": true,        // Generate .d.ts files
    "emitDeclarationOnly": false, // Allow JS files to be emitted alongside .d.ts
    "sourceMap": false,         // No source maps needed for type declarations
    "removeComments": false,    // Keep comments in .d.ts files

    // Type checking settings
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"], // Only compile files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude build output and dependencies
} 